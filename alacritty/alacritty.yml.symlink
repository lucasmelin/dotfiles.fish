import:
  - ~/.dotfiles/alacritty/dracula.yml

window:
  padding:
    x: 15
    y: 15
  dynamic_padding: true
  decorations: full
  startup_mode: Windowed
  dynamic_title: true
  dimensions:
   columns: 120
   lines: 40

scrolling:
  history: 10000
  multiplier: 3
  auto_scroll: false

tabspaces: 4

font:
  normal:
    family: Jetbrains Mono
  bold:
    family: Jetbrains Mono
  italic:
    family: Jetbrains Mono
  bold_italic:
    family: Jetbrains Mono
  size: 14.0
  use_thin_strokes: true

cursor:
  style:
    shape: Beam
    blinking: On

live_config_reload: true

key_bindings:
  - {
      key: Comma,
      mods: Command,
      command:
        {
          program: "/usr/local/bin/code",
          args: ["$HOME/.alacritty.yml"],
        },
    }
  - { key: 'T', mods: Command, action: SpawnNewInstance }

mouse_bindings:
  - { mouse: Middle, action: PasteSelection }
